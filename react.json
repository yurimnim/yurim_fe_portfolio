{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "React.js",
    "extends": "./base.json",
    "compilerOptions": {
      "plugins": [{ "name": "typescript-plugin-css-modules" }],
      "allowJs": true,
      "incremental": false,
      "jsx": "react-jsx",
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "esnext",
      "resolveJsonModule": true,
      "strict": true,
      "target": "ES2020",
      "paths": {
        "@/*": ["./*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  